<h1> Coupons </h1>
<%= link_to "Create New Coupon", new_merchant_coupon_path(@merchant) %>
<div id="coupon_details">
  <div id="active_coupons">
  <h2>Active Coupons</h2>
  <% @merchant.coupons.each do |coupon| %>
    <% if coupon.active == true %>  
    <p> Coupon Name <%= link_to coupon.name, merchant_coupon_path(@merchant, coupon) %> </p>
      <% if coupon.amount_type == "dollar" %>
      <p>Dollar Amount Off $<%= coupon.amount %></p>
      <% elsif coupon.amount_type == "percent" %>
    <p>Percentage Amount Off <%= coupon.amount %>%</p>
      <% end %>
    <% end %>
  <% end %>
  </div>

  <div id="inactive_coupons">
  <h2>Inactive Coupons</h2>
  <% @merchant.coupons.each do |coupon| %>
    <% if coupon.active == false %>
      <p> Coupon Name <%= link_to coupon.name, merchant_coupon_path(@merchant, coupon) %> </p>
      <% if coupon.amount_type == "dollar" %>
      <p>Dollar Amount Off $<%= coupon.amount %></p>
      <% elsif coupon.amount_type == "percent" %>
    <p>Percentage Amount Off <%= coupon.amount %>%</p>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>
<h2> Upcoming Holidays </h2>
<% retrieve_holidays.each do |holiday| %>
  <p> <%= holiday[:name] %> <%= holiday[:date] %> </p>
  <% end %>


