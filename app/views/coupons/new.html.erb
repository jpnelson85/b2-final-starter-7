<h1>New Coupon</h1>

<%= form_with model: [merchant, coupon], url: merchant_coupon_path(merchant), method: :post, local: true do |form| %>

<div>
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

<div>
  <%= hidden_field_tag :merchant_id, value: merchant %>
</div>

<div>
  <%= form.label :code %>
  <%= form.text_field :code %>
</div>

<div>
  <%= form.label :amount %>
  <%= form.number_field :amount %>
</div>

<div>
  <%= form.label :amount_type %>
  <%= form.select :amount_type, ['percent', 'dollar'] %>
</div>

<div>
  <%= form.submit "Create Coupon" %>
</div>
<% end %>